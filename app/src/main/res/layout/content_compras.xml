<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewCompras"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/StdMargin"
    android:scrollbars="vertical|horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.posmobile.Compras"
    tools:showIn="@layout/activity_compras">

    <TextView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_compras"
        android:textAlignment="center"
        android:textSize="@dimen/SizeTitle" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/FieldsMargin"
        android:scrollbars="vertical|horizontal">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/listaReferenciasSeleccionadas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/buttons"
            android:layout_margin="@dimen/StdMargin"
            android:layout_marginBottom="@dimen/StdMaxMargin" />


        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/bntMostrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mostrar" />

            <Button
                android:id="@+id/bntGuardar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Guardar" />

        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
