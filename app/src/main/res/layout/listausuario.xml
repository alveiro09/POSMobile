<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/StdMargin"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/LblNombreUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:fontFamily="cursive"
        android:text="@string/nombreDeUsuario"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/fab_margin" />

    <TextView
        android:id="@+id/LblNombreUsuarioData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LblNombreUsuario"
        android:text="@string/nombreDeUsuario"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/LblPrimerNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/LblNombreUsuarioData"
        android:fontFamily="cursive"
        android:text="@string/primerNombre"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/fab_margin" />

    <TextView
        android:id="@+id/LblPrimerNombreData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/LblPrimerNombre"
        android:text="@string/primerNombre"
        android:textColor="@color/colorAccent" />


    <TextView
        android:id="@+id/LblPrimerApellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LblPrimerNombreData"
        android:fontFamily="cursive"
        android:text="@string/primerApellido"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/fab_margin" />

    <TextView
        android:id="@+id/LblPrimerApellidoData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LblPrimerApellido"
        android:text="@string/primerApellido"
        android:textColor="@color/colorPrimary" />
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fltAditar"
        android:layout_centerHorizontal="true"
        app:srcCompat="@android:drawable/ic_menu_edit"
        android:layout_below="@id/LblPrimerApellidoData"
        android:layout_margin="@dimen/fab_margin"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorPrimaryDark" />

</RelativeLayout>